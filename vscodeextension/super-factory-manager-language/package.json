{
  "name": "super-factory-manager-language",
  "displayName": "Super Factory Manager Language",
  "description": "Adds language support for the Super Factory Manager Language.",
  "repository": "https://github.com/TeamDman/SuperFactoryManager",
  "publisher": "TeamDman",
  "version": "0.0.8",
  "icon": "media/icon.png",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:sfm",
    "onLanguage:sfml"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sfml",
        "aliases": [
          "Super Factory Manager Language",
          "sfml"
        ],
        "extensions": [
          ".sfm",
          ".sfml"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "media/icon_sfm.png",
          "dark": "media/icon_sfm.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "sfml",
        "scopeName": "source.sfml",
        "path": "./syntaxes/sfml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sfml",
        "path": "./snippets/sfml.code-snippets"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/vscode": "^1.0.0",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "antlr4ts-cli": "^0.5.0-alpha.4"
  }
}
